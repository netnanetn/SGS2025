@using CMS_Data.Services
@using Microsoft.AspNetCore.Components
@inject ProductService ProductService

@if (Show)
{
    <div class="modal fade show d-block" tabindex="-1" style="background:rgba(0,0,0,.5)">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Danh sách sản phẩm</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>

                <div class="modal-body">
                    <!-- Tìm kiếm -->
                    <div class="input-group mb-3">
                        <input class="form-control" placeholder="Tìm theo mã, tên sản phẩm..."
                               @bind="search" @bind:event="oninput" />
                        <button class="btn btn-outline-secondary" @onclick="DoSearch">Tìm</button>
                    </div>

                    <!-- Kết quả -->
                    <div class="table-responsive mb-3" style="max-height:320px; overflow:auto;">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th style="width:150px">Mã SP</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Đơn vị</th>
                                    <th>Giá bán</th>
                                    <th style="width:100px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (items is null)
                                {
                                    <tr><td colspan="5">Nhập từ khoá để tìm…</td></tr>
                                }
                                else if (items.Count == 0)
                                {
                                    <tr><td colspan="5">Không tìm thấy.</td></tr>
                                }
                                else
                                {
                                    @foreach (var p in items)
                                    {
                                        <tr>
                                            <td>@p.Code</td>
                                            <td>@p.Name</td>
                                            <td>@p.UnitName</td>
                                            <td>@(p.PriceOutput?.ToString("N0"))</td>
                                            <td>
                                                <button class="btn btn-sm btn-primary" @onclick="() => Select(p)">Chọn</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Thêm mới -->
                    <details class="mb-2">
                        <summary class="h6">Thêm sản phẩm mới</summary>
                        <div class="row g-2 mt-1">
                            <div class="col-md-4">
                                <label class="form-label">Mã sản phẩm *</label>
                                <input class="form-control" @bind="createModel.Code" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Tên sản phẩm *</label>
                                <input class="form-control" @bind="createModel.Name" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Đơn vị</label>
                                <input class="form-control" @bind="createModel.UnitName" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Giá bán</label>
                                <input type="number" class="form-control" @bind="createModel.PriceOutput" />
                            </div>
                            <div class="col-12 mt-2">
                                <button class="btn btn-success" @onclick="AddNew" disabled="@string.IsNullOrWhiteSpace(createModel.Code)">
                                    Lưu sản phẩm mới
                                </button>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(error))
                        {
                            <div class="text-danger mt-2">@error</div>
                        }
                    </details>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Close">Đóng</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }
    [Parameter] public EventCallback<TblProduct> OnSelected { get; set; }

    private string? search;
    private List<TblProduct>? items;
    private TblProduct createModel = new();
    private string? error;

    protected override async Task OnParametersSetAsync()
    {
        if (Show && items is null)
            await DoSearch();
    }

    private async Task DoSearch()
    {
        items = await ProductService.SearchAsync(search);
        StateHasChanged();
    }

    private async Task AddNew()
    {
        error = null;
        try
        {
            createModel.Code = createModel.Code?.Trim();
            if (string.IsNullOrWhiteSpace(createModel.Code) || string.IsNullOrWhiteSpace(createModel.Name))
            {
                error = "Mã SP và tên SP bắt buộc.";
                return;
            }

            var saved = await ProductService.AddAsync(createModel);
            // refresh danh sách và chọn luôn sản phẩm vừa thêm (tuỳ ý)
            await DoSearch();
            await Select(saved);

            // reset form
            createModel = new();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private async Task Select(TblProduct p)
    {
        if (OnSelected.HasDelegate)
            await OnSelected.InvokeAsync(p);
        await Close();
    }

    private async Task Close()
    {
        items ??= new();
        if (ShowChanged.HasDelegate)
            await ShowChanged.InvokeAsync(false);
    }
}
