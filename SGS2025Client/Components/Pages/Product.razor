@page "/products"

@inherits SGS2025Client.Common.BaseRazorComponent
@inject ProductService _productService
@inject ExcelService _excelService
@inject IJSRuntime JS

<div class="input-group mb-3">
    <InputText @bind-Value="searchText" class="form-control" placeholder="🔍 Tìm sản phẩm..." />
    <button class="btn btn-primary" @onclick="Search">Tìm</button>
    <button class="btn btn-secondary" @onclick="ResetSearch">Reset</button>
</div>

<button class="btn btn-primary mb-2" @onclick="ShowAddForm">➕ Thêm Sản phẩm</button>
<button class="btn btn-primary mb-2" @onclick="ExportExcel">Xuất excel</button>

@if (editProduct != null)
{
    <EditForm Model="editProduct" OnValidSubmit="Save">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="card shadow-sm border-0">
            <div class="card-header bg-success text-white fw-semibold">
                📦 Thông tin sản phẩm
            </div>

            <div class="card-body">
                <div class="row g-3">
                    <!-- Cột trái -->
                    <div class="col-md-6">
                        <div class="row mb-2 align-items-center">
                            <label class="col-sm-4 col-form-label">Mã sản phẩm:</label>
                            <div class="col-sm-8">
                                <InputText id="productCodeInput" class="form-control" @bind-Value="editProduct.Code" />
                            </div>
                        </div>

                        <div class="row mb-2 align-items-center">
                            <label class="col-sm-4 col-form-label">Tên sản phẩm:</label>
                            <div class="col-sm-8">
                                <InputText class="form-control" @bind-Value="editProduct.Name" />
                            </div>
                        </div>

                        <div class="row mb-2 align-items-center">
                            <label class="col-sm-4 col-form-label">Đơn vị:</label>
                            <div class="col-sm-8">
                                <InputSelect @bind-Value="editProduct.UnitName" class="form-select form-select-sm">
                                    <option value="">-- Chọn đơn vị --</option>
                                    <option value="KG">KG</option>
                                    <option value="M3">M3</option>
                                </InputSelect>
                            </div>
                        </div>

                        <div class="row mb-2 align-items-center">
                            <label class="col-sm-4 col-form-label">Tỉ lệ:</label>
                            <div class="col-sm-8">
                                <InputNumber class="form-control" @bind-Value="editProduct.Proportion" />
                            </div>
                        </div>
                    </div>

                    <!-- Cột phải -->
                    <div class="col-md-6">
                        <div class="row mb-2 align-items-center">
                            <label class="col-sm-4 col-form-label">Giá nhập:</label>
                            <div class="col-sm-8">
                                <InputNumber class="form-control" @bind-Value="editProduct.PriceInput" />
                            </div>
                        </div>

                        <div class="row mb-2 align-items-center">
                            <label class="col-sm-4 col-form-label">Giá bán:</label>
                            <div class="col-sm-8">
                                <InputNumber class="form-control" @bind-Value="editProduct.PriceOutput" />
                            </div>
                        </div>

                        <div class="row mb-2 align-items-center">
                            <label class="col-sm-4 col-form-label">Loại sản phẩm:</label>
                            <div class="col-sm-8">
                                <InputNumber class="form-control" @bind-Value="editProduct.TypeProduct" />
                            </div>
                        </div>

                        <div class="row mb-2 align-items-center">
                            <label class="col-sm-4 col-form-label">Công ty:</label>
                            <div class="col-sm-8">
                                <InputNumber class="form-control" @bind-Value="editProduct.CompanyId" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer text-end bg-light">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">
                    <i class="bi bi-x-circle"></i> Hủy
                </button>
            </div>
        </div>
    </EditForm>

}

@if (products == null)
{
    <p><em>Đang tải...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã SP</th>
                <th>Tên</th>
                <th>Đơn vị</th>
                <th>Tỉ lệ</th>
                <th>Giá nhập</th>
                <th>Giá bán</th>
                <th>Loại</th>
                <th>Công ty</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in products)
            {
                <tr>
                    <td>@p.Code</td>
                    <td>@p.Name</td>
                    <td>@p.UnitName</td>
                    <td>@p.Proportion</td>
                    <td>@p.PriceInput</td>
                    <td>@p.PriceOutput</td>
                    <td>@p.TypeProduct</td>
                    <td>@p.CompanyId</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Edit(p)">✏️ Sửa</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(p.Id)">🗑️ Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<TblProduct>? products;
    TblProduct? editProduct;
    string searchText = string.Empty;
    bool shouldFocus = true;

    protected override async Task OnInitializedAsync()
    {
       
        await Run(async () => { products = await _productService.GetAllAsync(); });

    }

    async Task Search()
    {
        await Run(async () =>
        {
            if (string.IsNullOrWhiteSpace(searchText))
                products = await _productService.GetAllAsync();
            else
                products = await _productService.SearchAsync(searchText);
        });

        
    }

    async Task ResetSearch()
    {
        searchText = string.Empty;
        await Run(async () => { products = await _productService.GetAllAsync(); });
    }

    async Task ShowAddForm()
    {
        editProduct = new TblProduct();
        shouldFocus = true;
    }
    private async Task ExportExcel()
    {
        await RunSafe(async () =>
        {
            var path = await _excelService.ExportProductToDownloadsAsync(products);
            // Có thể mở luôn sau khi export
            await Launcher.OpenAsync(new OpenFileRequest
                {
                    File = new ReadOnlyFile(path)
                });
        }, null);

        
    }
    async Task Edit(TblProduct p)
    {
        editProduct = new TblProduct
            {
                Id = p.Id,
                Code = p.Code,
                Name = p.Name,
                UnitId = p.UnitId,
                UnitName = p.UnitName,
                Proportion = p.Proportion,
                PriceInput = p.PriceInput,
                PriceOutput = p.PriceOutput,
                TypeProduct = p.TypeProduct,
                CompanyId = p.CompanyId
            };
        shouldFocus = true;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (shouldFocus)
        {
            shouldFocus = false;
            await Run(async () => { await JS.InvokeVoidAsync("siteHelpers.focusAndScroll", "productCodeInput", null); });

            
        }
    }

    async Task Save()
    {
        if (editProduct == null) return;

        await RunSafe(async () =>
        {
            if (editProduct.Id == 0)
                await _productService.AddAsync(editProduct);
            else
                await _productService.UpdateAsync(editProduct);

            products = await _productService.GetAllAsync();
            editProduct = null;
        }, null);

       

    }

    async Task Delete(int id)
    {
        await RunSafe(async () =>
        {
            await _productService.DeleteAsync(id);
            products = await _productService.GetAllAsync();
        }, null);

    }

    void Cancel() => editProduct = null;
}
